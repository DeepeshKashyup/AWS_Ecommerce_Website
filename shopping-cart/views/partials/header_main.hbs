                                        <label for="inputHorizontalDnger" class="col-sm-2 control-label">
                                            Email
                                        </label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control form-control-error" name="email" id="inputHorizontalDnger" placeholder="Email" />
                                            <div class="row col-sm-10">
                                            <div class="form-control-feedback">Sorry, that username's taken. Try another?</div>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1" class="col-sm-2 control-label">
