{{#each products}}
<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
            <img style="max-width:100%;" src="{{this.imgPath}}" />
        </div>
        <div class="col-xs-5" style="border:0px solid gray">
            <!-- Datos del vendedor y titulo del producto -->
            <h3>{{ this.title }}</h3>
            <h5 style="color:#337ab7">{{this.categories}}<!--<a href="#">Samsung</a> Â· <small style="color:#337ab7">(5054 ventas)</small></h5>--></h5>
            <!-- Precios -->
            <h5 class="title-price"><small>Price</small></h5>
            <h3 style="margin-top:0px;">US{{this.price}}</h3>

            <!-- Detalles especificos del producto -->
